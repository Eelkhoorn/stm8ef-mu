.ifndef (]A<IF)

: (]A<IF) ;

__meta

-- STM8EF : ]A<IF  like "( c ) A@ < IF" with relative addressing  TG9541 - 201129
-- ------------------------------------------------------------------------------

#require >REL
-- like "c A@ < IF" with relative addressing
: ]A<IF $A1 C, ( c ) C, $2A C, ] >REL ; -- CP A,#c  JRPL rel

comment ===
 Example:

#require ]A<IF

VARIABLE vt

: test ( -- )
  vt C@ ( A now equals TOS )
  [ 3 ]A<IF ." 3 >=" THEN  -- compare Y with constant
  ( still TOS ) .
;

.then
